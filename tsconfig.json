{
  "compilerOptions": {
    "lib": [
      "es2017",
      "esnext.asynciterable",
      "dom"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "strict": true,
    "target": "es6",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": [
      "src/**/*",
      "test/**/*",
      "node_modules/vitest/globals.d.ts"
  ]
}